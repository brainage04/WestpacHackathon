#:kivy 2.0.0

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'gradient_bg.png'  # Your gradient background image

        Image:
            source: 'WBClogo.png'
            size_hint: None, None
            size: dp(150), dp(50)
            pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '48dp'

            Image:
                source: 'person-outlined.png'  # Converted person icon
                size_hint_x: None
                width: '48dp'

            TextInput:
                id: customer_id
                hint_text: 'Customer ID'
                background_color: (0, 0, 0, 0)  # Transparent background
                foreground_color: (1, 1, 1, 1)  # White text

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '48dp'

            Image:
                source: 'super-outlined.png'  # Converted password icon
                size_hint_x: None
                width: '48dp'

            TextInput:
                id: password
                hint_text: 'Password'
                password: True
                background_color: (0, 0, 0, 0)  # Transparent background
                foreground_color: (1, 1, 1, 1)  # White text

        Label:
            text: "Forgot customer ID or password?"
            color: (0.8, 0.8, 1, 1)  # Light purple
            size_hint_y: None
            height: dp(30)

        Button:
            text: 'Sign in'
            background_color: 0.8549, 0.0902, 0.0627, 1  # Red color
            size_hint_y: None
            height: dp(50)

        Button:
            text: 'Register for online banking'
            background_color: (0.5, 0.5, 0.5, 1)  # Grey color
            size_hint_y: None
            height: dp(50)
