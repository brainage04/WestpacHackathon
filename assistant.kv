#:kivy 2.0.0

<AssistantScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        canvas.before:
            Color:
                rgba: 0.9529, 0.9569, 0.9647, 1  # Light grey background
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: 'WBCLogo_red.png'  # Logo
            size_hint: None, None
            size: dp(300), dp(100)  # Adjust size as needed
            pos_hint: {'center_x': 0.5}

        Label:
            text: 'Assistant Screen'
            size_hint_y: None
            height: dp(50)
            font_size: '20sp'
            color: 0.1216, 0.1098, 0.3098, 1  # Dark blue text

        TextInput:
            id: display_recording
            hint_text: 'Displayed recording text here'
            size_hint_y: None
            height: dp(50)
            readonly: True
            background_color: (1, 1, 1, 0.5)  # Semi-transparent white for readonly field
            foreground_color: (0, 0, 0, 1)  # Black text

        TextInput:
            id: record_input
            hint_text: 'Enter recording commands here'
            size_hint_y: None
            height: dp(50)
            multiline: False
            background_color: (1, 1, 1, 1)  # White background for input
            foreground_color: (0, 0, 0, 1)  # Black text

        Button:
            text: 'Start Recording'
            size_hint_y: None
            height: dp(50)
            background_normal: ''
            background_color: 0.8549, 0.0902, 0.0627, 1  # Red color for buttons
            color: 1, 1, 1, 1  # White text
            on_release: root.start_recording()

        Button:
            text: 'Stop Recording'
            size_hint_y: None
            height: dp(50)
            background_normal: ''
            background_color: 0.8549, 0.0902, 0.0627, 1  # Red color for buttons
            color: 1, 1, 1, 1  # White text
            on_release: root.stop_recording()
